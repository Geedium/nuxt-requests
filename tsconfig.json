{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES6", "DOM"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "outDir": "./dist",
        "strict": true,
        "target": "ES5"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}